@{
    ViewBag.Title = "Cotacao";
}

<h2>@ViewBag.Title.</h2>

<div class="jumbotron">
    <h1>SignalR - Cotação</h1>
</div>

<h2>Cotação em tempo real - Simulação</h2>
<div id="stockTable">
    <table border="1">
        <thead>
            <tr><th>Symbol-Papel</th><th>Price-Preco</th><th>Open-Valor de abertura</th><th>Change-Cotacao</th><th>%</th></tr>
        </thead>
        <tbody>
            <tr class="loading"><td colspan="5">loading...</td></tr>
        </tbody>
    </table>
</div>
<marquee>
    <h2><font color="red">Para validar atualização em tempo real, sugiro abrir em mais de um browser como Google Chrome e IE</font></h2>
</marquee>

@section Scripts {
    <!--Script references. -->
    <!--Reference the jQuery library. -->
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.2.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="/signalr/hubs"></script>
    <!--Reference the StockTicker script. -->
    <script src="~/Scripts/StockTicker.js"></script>
}